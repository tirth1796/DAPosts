<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rish.crearo.onlinesql.MainTabsActivity">


    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        app:pstsShouldExpand="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tabs_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs_tabs" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/tabs_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        app:backgroundTint="@color/mat_green"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@color/mat_green_pressed" />

</RelativeLayout>
